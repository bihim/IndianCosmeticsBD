<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_user"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/recyclerview_review_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_user"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerview_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_date"
        android:textSize="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/recyclerview_review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_description"
        android:textSize="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_8sdp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?textViewSecondaryColor"/>
</LinearLayout>