<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indiancosmeticsbd.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IndianCosmeticsBD.Dark"
        android:windowSoftInputMode="stateVisible|adjustPan">
        <activity android:name=".Views.Activity.Account.RegisterActivity"></activity>
        <activity android:name=".Views.Activity.Account.SignInActivity" />
        <activity android:name=".Views.Activity.Account.AccountActivity" />
        <activity android:name=".Views.Activity.CartActivity" />
        <activity android:name=".Views.Activity.WishListActivity" />
        <activity android:name=".Views.Activity.MainActivity" />
        <activity android:name=".Views.Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>