<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_2sdp">
    <LinearLayout
        android:id="@+id/recyclerview_product_sizes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/forgotPassDark"
        android:padding="@dimen/_1sdp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_6sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?layoutColor"
                android:padding="@dimen/_5sdp">
                <TextView
                    android:id="@+id/recyclerview_product_sizes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?textViewMainColor"
                    android:text="@string/product_details_size_example"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>